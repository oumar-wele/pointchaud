{% extends 'base.html.twig' %}
{% block body %}

    {% include 'navbar/_navbar.html.twig' %}

    <div class="container  mt-5">
            
            <div  class="row">
                <div class="col-md-5 mt-3 mx-auto">
                    <h2 class="mx-auto"> Deposer votre annonce</h2> 
                </div>
            </div>
            {{ form_start(formulaire)}}
                <div class="row">
                    <div class="col-md-5 mx-auto mb-2">{{form_row(formulaire.imageFile)}} </div>
                </div>
                <div class="row">
                    <div class="col-md-5 mx-auto mb-2">{{form_row(formulaire.title)}} </div>
                </div>
                <div class="row row justify-content-md-center">
                    <div class="col-md-2 mb-2">{{form_row(formulaire.prix)}} </div>
