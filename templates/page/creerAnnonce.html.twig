                </div>
                <div class="row">
                    <div class="col-md-5 mx-auto mb-2">{{form_row(formulaire.description)}} </div>
                </div>

                <div class="row">
                    <div class="col-md-5 mx-auto">
                        <div class="d-grid gap-2 mb-5 mt-5">
                            <button class="btn btn-lg btn-primary" type="submit" formnovalidate>Deposer votre annonce</button>
                        </div>
                    </div>
                </div>
                           

        
            {{form_end(formulaire)}}
  
    </div>
    {% include 'footer/_footer.html.twig' %}

    

{% endblock %}