{% extends 'base.html.twig' %}


{% block body %}
    {% include 'navbar/_navbar.html.twig' %}

    <div class="container mt-5">


        <div class="row">
            <div class="col col-md-6 mx-auto">
               <!-- <div class="mt-3 mb-3">
                    <img src="image/logo.png" alt="">
                </div>-->
                <h1 class="text-center mb-5" style="color: blue;">Please sign in</h1>
                

                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                
                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <div class="form-group mb-3">
                        <label for="Email">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="Email" class="form-control" required autofocus>
                    </div>

                    <div class="form-group mb-3">
                        <label for="Password">Password</label>
                        <input type="password" name="password" id="Password" class="form-control" required>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >

                    <div class="d-flex mb-3 justify-content-between">
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                        <a href="#">Mot de passe oubli√© ?</a>

                    </div>


                    <div class="d-grid gap-2">
                        <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>
                      </div>

                      <p class="text-center text-muted mt-5 mb-3"> Pas de compte ? <a href="#">Inscription</a></p>

                </form>
            </div>
        </div>





   
    </div>

    {% include 'footer/_footer.html.twig' %}

{% endblock %}
