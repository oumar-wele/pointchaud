{% extends 'base.html.twig' %}
{% block body %}

    {% include 'navbar/_navbar.html.twig' %}

    <div class="container bg-white text-center">
    
    <div class="row">
        <div class="col-md-6 ">
            <article>
                <div class="mb-5 border-rounded shadow">
                    <a href="{{path('annonce_show',{id: annonce.id})}}">
                        <img src="{{ ( annonce.imageName ? vich_uploader_asset(annonce) : asset('image/noImage.png')) |imagine_filter('my_thumb_medium') }}" alt="{{ annonce.title }}" />
                    </a> 
                </div>
          
                <div class="mb-5 border-bottom">
                    <h2> {{ annonce.title}}</h2>
                </div>
                <div  class="border-bottom  mb-5">
                    <h3>Prix: {{annonce.prix}}</h3>
                </div>
                <div class=" border-bottom " style="margin-right: auto;">
                    <h4>Description</h4>
                    <p>{{ annonce.description}}</p>
                </div>

                
                <a href="{{path('edit_annoce',{id: annonce.id})}}">Modifier l'annonce</a>|
                <a href="#" onclick="event.preventDefault(); confirm('Veuillez confirmer la suppression !')&& document.getElementById('js-annonce-delate').submit();" >Supprimer l'annonce</a>
            </article>
        </div>
        <div class="col md-6">
            <div class="row">
                <div class="col col-md-8 ml-auto  shadow " style="margin-left: auto;">
                    <div class="d-grid gap-2 mb-3 mt-5">
                        <button class="btn btn-lg btn-primary" type="submit">Acheter</button>
                    </div>
                    <div class="d-grid gap-2 mb-5">
                        <button class="btn btn-lg btn-warning" type="submit">Contacter le vendeur</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

      
    </div>
    <form id="js-annonce-delate" action="{{path('delate_annoce',{id: annonce.id})}}" method="post" style="display: none;">
        <input type="hidden" name="csrf_token" value="{{csrf_token('delation.annoce')}}">
        <input type="hidden" name="_method" value="DELATE">
    </form>

    {% include 'footer/_footer.html.twig' %}

    

{% endblock %}